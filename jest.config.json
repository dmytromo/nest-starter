{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "modulePaths": ["<rootDir>"],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "statements": 55,
      "branches": 0,
      "functions": 50,
      "lines": 50
    }
  }
}
