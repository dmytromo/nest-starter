{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "check:types": "tsc --noEmit",
    "check:format": "prettier --check .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config ./jest.config.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky && husky install",
    "cq": "npm run check:types && npm run test",
    "version": "echo {\\\"hash\\\": \\\"$(git rev-parse --short HEAD)\\\"} > version.json",
    "docker:dev": "docker-compose up",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/core/db/typeorm.config.ts",
    "orm:create": "npm run typeorm migration:generate --",
    "orm:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.6.7",
    "cache-manager": "^5.4.0",
    "cache-manager-redis-yet": "^4.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.0.0",
    "nestjs-cls": "^4.4.1",
    "nestjs-i18n": "^10.4.9",
    "nestjs-pino": "^4.0.0",
    "nestjs-safer-config": "^0.11.0",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "nestjs-pino": {
      "pino": "$pino"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.2",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.14.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.21",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.12.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.13.0"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
